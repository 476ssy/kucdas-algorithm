{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "디버그: C 프로그램",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,    // 새 창에서 실행하려면 true, 내부 콘솔이면 false
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe",  // gdb.exe의 정확한 경로
      "setupCommands": [
        {
          "description": "자동 포맷 활성화",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
